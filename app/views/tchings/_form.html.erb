
<div class="row">
  <div class="col-sm-6 offset-sm-3">
   
<%= form_with(model: @tching, local: true) do |f| %>

<% if tching.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tching.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

      <%= f.collection_select :ctg_id, Ctg.all, :id, :ctg, { include_blank: true } %>←カテゴリーを選択してください。
      <div class="form-group">
      <label>タイトル：</label>
       <%= f.text_field :title, size: "100" %>
      </div>
     
      <div class="form-group" >
        <%= f.label :content, '詳細：' %>
        <%= f.text_area :content ,size: "100x20"%>
      </div>

       <%= f.submit '投稿', class: 'btn btn-primary btn-lg' %>
    <% end %>

    
    <%= link_to 'トップ（カテゴリー一覧）に戻る', ctgs_path, class: "baktop"%>
  </div>
</div>

